# ==================== Slack 설정 (필수) ====================
# Slack Bot User OAuth Token - https://api.slack.com/apps 에서 발급
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Slack App-Level Token (Socket Mode용) - https://api.slack.com/apps 에서 발급
SLACK_APP_TOKEN=xapp-your-app-token

# 알림을 보낼 기본 채널 ID (예: C01234567890)
# 채널 ID는 Slack에서 채널 우클릭 → "채널 세부정보 보기"에서 확인
SLACK_CHANNEL_ID=C0000000000

# ==================== LLM 설정 ====================
# Groq 또는 OpenAI API Key
# Groq: https://console.groq.com/keys (무료)
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-api-key

# LLM 제공자 선택: groq 또는 openai
LLM_PROVIDER=groq

# 사용할 모델명
# Groq: llama-3.3-70b-versatile, mixtral-8x7b-32768
# OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo
LLM_MODEL=llama-3.3-70b-versatile

# ==================== 날씨 API 설정 ====================
# OpenWeatherMap API Key - https://home.openweathermap.org/api_keys (무료)
OPENWEATHERMAP_API_KEY=your-weather-api-key

# 기본 도시명 (영문)
DEFAULT_CITY=Seoul

# ==================== Kakao Maps API 설정 ====================
# Kakao REST API Key - https://developers.kakao.com/ (무료)
# 앱 생성 후 "앱 키" → "REST API 키" 복사
KAKAO_REST_API_KEY=your-kakao-rest-api-key

# ==================== AI 비서 설정 ====================
# AI 비서 이름
ASSISTANT_NAME=패니저

# ==================== OAuth 설정 (다중 사용자) ====================
# 토큰 암호화 키 (32자 이상 권장)
# 생성: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=your-encryption-key-32-characters

# Google OAuth 2.0 설정 - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth 콜백 URL (배포 시 실제 도메인으로 변경)
OAUTH_REDIRECT_URI=http://localhost:8080/oauth/callback

# ==================== 앱 설정 ====================
# 로깅 레벨: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 타임존
TIMEZONE=Asia/Seoul
